# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Source code
*.js text
*.jsx text
*.ts text
*.tsx text
*.svelte text
*.mjs text
*.cjs text
*.json text

# Web files
*.css text
*.scss text
*.sass text
*.html text
*.htm text
*.xml text
*.svg text

# Config files
*.yml text
*.yaml text
*.toml text
*.ini text
*.conf text
*.config text

# Documentation
*.md text diff=markdown
*.mdx text
*.txt text
README text
LICENSE text
AUTHORS text
CHANGELOG text

# Scripts (must be LF for *nix)
*.sh text eol=lf
*.bash text eol=lf
*.fish text eol=lf
*.zsh text eol=lf

# Templates
*.ejs text
*.hbs text
*.handlebars text
*.mustache text

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.avif binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.otf binary
*.pdf binary
*.zip binary
*.tar binary
*.gz binary
*.mp4 binary
*.webm binary
*.mp3 binary
*.wav binary

# Lock files - use 'ours' strategy to avoid merge conflicts
package-lock.json linguist-generated=true merge=ours
yarn.lock linguist-generated=true merge=ours
pnpm-lock.yaml linguist-generated=true merge=ours
bun.lockb binary linguist-generated=true merge=ours

# Build artifacts (mark as generated for GitHub linguist)
*.min.js linguist-generated=true
*.min.css linguist-generated=true
*.bundle.js linguist-generated=true
dist/** linguist-generated=true
build/** linguist-generated=true
.svelte-kit/** linguist-generated=true
.next/** linguist-generated=true

# Source maps
*.map linguist-generated=true

# Svelte specific
*.svelte diff=html linguist-language=Svelte

# Export-ignore (exclude from git archive/exports)
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore
.vscode export-ignore
.editorconfig export-ignore
*.test.js export-ignore
*.test.ts export-ignore
*.spec.js export-ignore
*.spec.ts export-ignore
__tests__/** export-ignore
